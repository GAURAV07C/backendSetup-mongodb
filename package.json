{
    "name": "node-setup",
    "version": "1.0.0",
    "description": "A Node.js setup with TypeScript",
    "main": "src/server.ts",
    "scripts": {
        "test": "echo 'No tests available'",
        "dist": "npx tsc",
        "dev": "dotenvx run -f .env.development -- nodemon  src/server.ts",
        "start": "dotenvx run -f .env.production -- node dist/server.js",
        "start:env:encrypt": "dotenvx encrypt -f .env.production",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "prepare": "husky"
    },
    "keywords": [
        "node",
        "typescript",
        "setup"
    ],
    "author": "Gaurav",
    "license": "ISC",
    "lint-staged": {
        "**/*": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.4.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@eslint/js": "^9.9.1",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^4.17.21",
        "@types/node": "^22.5.0",
        "@types/source-map-support": "^0.5.10",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.9",
        "prettier": "3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.2.0"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "source-map-support": "^0.5.21",
        "winston": "^3.14.2"
    }
}
